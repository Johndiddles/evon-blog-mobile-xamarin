<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Evon_Blog_Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="bgColor">#1E99DD</Color>
            <Color x:Key="btnTextColor">#FFFFFF</Color>

            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource bgColor}" ></Setter>
                <Setter Property="TextColor" Value="{StaticResource btnTextColor}" ></Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
